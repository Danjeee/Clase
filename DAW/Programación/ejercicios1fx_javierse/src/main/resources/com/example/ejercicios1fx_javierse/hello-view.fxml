<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.ejercicios1fx_javierse.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label alignment="BOTTOM_LEFT" prefHeight="11.0" prefWidth="197.0" text="Nombre" />
      <TextField promptText="Nombre..." fx:id="nombre" />
      <Label prefWidth="199.0" text="Apellidos" />
      <TextField promptText="Apellido/s..." fx:id="apellidos" />
      <HBox alignment="TOP_CENTER" prefHeight="0.0" prefWidth="200.0" spacing="50.0">
         <children>
            <Button onAction="#send" text="Enviar" />
            <Button onAction="#clean" text="Limpiar" />
         </children>
      </HBox>
      <Button mnemonicParsing="false" text="Salir" />
      <BorderPane prefHeight="0.0" prefWidth="200.0" />
   </children>
</VBox>
